{{define "content"}}
<article class="view">
    <div class="date">
        <span class="weekday">{{.Journal.GetDayOfWeek}}</span>
        <span class="day">{{.Journal.GetDay}}</span>
        <span class="month">{{.Journal.GetMonth}}</span>
        <span class="year">{{.Journal.GetYear}}</span>
    </div>
    <h2>{{.Journal.Title}}</h2>
    <div class="clearfix"></div>
    <div class="content">
        {{.Journal.Content}}
    </div>
</article>

<p><a href="/" class="button button-outline">Back</a> {{if .Container.Configuration.EnableEdit}}<a href="/{{.Journal.Slug}}/edit" class="button">Edit</a>{{end}}</p>

{{if or .Next.ID .Prev.ID}}
    <nav class="pagination">
        <ol>
            {{if .Prev.ID}}
                <li><a href="/{{.Prev.Slug}}">Previous</a></li>
            {{end}}
            {{if .Next.ID}}
                <li><a href="/{{.Next.Slug}}">Next</a></li>
            {{end}}
        </ol>
    </nav>
{{end}}
{{end}}
